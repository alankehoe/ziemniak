:css
  html {
    background: url(/san_fran.jpg) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }

  body {
    padding-top: 20px;
    font-size: 16px;
    font-family: "Open Sans", serif;
    background: transparent;
  }

  /* responsive */
  @media (max-width: 767px) {
    .login-wrapper .box {
      width: 350px;
    }
  }

  @media (max-width: 480px) {
    .login-wrapper .box {
      width: 90%;
    }
  }

.login-wrapper
  .box
    .content-wrap
      %form{'ng-submit' => 'login()'}
        %h3.padding
          Ziemniak
        %alert{'ng-repeat' => 'alert in alerts', :type => 'alert.type', :close => 'closeAlert($index)'}
          {{alert.msg}}
        %input.form-control.padding{:name => 'username', :placeholder => 'Username', 'ng-model' => 'user.username'}
        %input.form-control.padding{:name => 'password', :type => 'password', :placeholder => 'Password', 'ng-model' => 'user.password'}
        %button.btn.btn-primary.btn-sm.btn-block{:type => 'submit'}
          Login
    .no-account
      %p
        Don't have an account?
      %a{:href => '/#/users/register'}
        Register